<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <!-- font-awesome -->
    <link rel="stylesheet" href="~/Content/font-awesome/css/font-awesome.min.css">
    <!-- CSS site -->
    <link rel="stylesheet" href="~/Content/style/style.css">
    <!-- CSS para impressão -->
    <link rel="stylesheet" type="text/css" href="~/print.css" media="print">
    <script src="~/Content/Scripts/script.js"></script>
    <script src="~/Content/Jquery/jquery-3.6.1.js"></script>

    <title>Agro+ - @ViewBag.Title</title>
</head>
<body>
    <div id="sidebar">
        <div id="top">
            <img id="imgPerfil" src="~/Content/img/me.jpg" alt="foto_perfil">
            <h2>Bem vindo!</h2>
            <h2 style="color: #C3D343; margin-top: -25px;">Gerente</h2>
            <div>
                <button class="btn-menu">
                    <i class="fa fa-home fa-lg"></i>
                    @Html.ActionLink("Serviços", "Index", "Home")
                </button>
                <button class="btn-menu">
                    <i class="fa fa-user fa-lg" aria-hidden="true"></i>
                    @Html.ActionLink("Clientes", "Clientes", "Home")
                </button>
                <button class="btn-menu">
                    <i class="fa fa-cog fa-lg" aria-hidden="true"></i>
                    @Html.ActionLink("Configurãção", "Configuracao", "Home")
                </button>
                <button class="btn-sair"><i class="fa fa-sign-out fa-lg" aria-hidden="true"></i> Sair</button>
            </div>
        </div>
        <div id="bottom">
            <img src="~/Content/img/logo.png" alt="logo_empresa" width="70%">
        </div>
    </div>

    <div id="conteudo">
        @RenderBody()
    </div>

    <!-- Option 1: Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>