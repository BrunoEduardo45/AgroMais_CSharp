@model AgroMais.Models.Clientes
@using AgroMais

@{
    ViewData["Title"] = "Editar Cliente";
}

<div id="header">
    <div id="topo">
        <h3><i class="fa fa-pen topo"></i>Editar dados do cliente</h3>
        <div id="div-btn-add">
            <p>Voltar para a lista</p>
            <a id="btn-add" href="~/Home/Clientes" style="text-decoration:none;"><i class="fa fa-arrow-left"></i></a>
        </div>
    </div>
</div>



<div id="container">
    <div id="lista">
        <h1>Dados do cliente</h1>
        <br class="dont-print">
        <br class="dont-print">
        <form class="row" id="formulario">
            <div class="col-md-4 mb-4">
                <label><b>Nome:</b></label>
                <input type="text" class="form-control" @*value="@(!String.IsNullOrWhiteSpace(Model.CLI_NOME) ? Model.CLI_NOME : "")"*@ name="CLI_NOME" id="CLI_NOME">
                <br class="dont-print">
            </div>
            <div class="col-md-4 mb-4">
                <label><b>Profissão:</b></label>
                <input type="text" class="form-control" @*value="@(!String.IsNullOrWhiteSpace(Model.CLI_PROFISSAO) ? Model.CLI_PROFISSAO : "")"*@ name="CLI_PROFISSAO" id="CLI_PROFISSAO">
                <br class="dont-print">
            </div>
            <div class="col-md-2 mb-2">
                <label><b>Sexo:</b></label>
                <select class="form-select" name="CLI_SEXO" id="CLI_SEXO" @*value="@Model.CLI_SEXO"*@>
                    <option value="" selected>Selecione</option>
                    <option value="0">Masculino</option>
                    <option value="1">Feminino</option>
                </select>
                <br class="dont-print">
            </div>
            <div class="col-md-2 mb-2">
                <label><b>Data de Nascimento:</b></label>
                <input type="date" class="form-control date" @*value="@Model.CLI_DATA_NASC"*@ name="CLI_DATA_NASC" id="CLI_DATA_NASC">
                <br class="dont-print">
            </div>
            <div class="col-md-4 mb-4">
                <label><b>CPF:</b></label>
                <input type="text" class="form-control cpf" @*value="@(!String.IsNullOrWhiteSpace(Model.CLI_CPF) ? Model.CLI_CPF : "")"*@ name="CLI_CPF" id="CLI_CPF" placeholder="###.###.###-##" onkeyup="mascara('###.###.###-##',this,event,true)" maxlength="14">
                <br class="dont-print">
            </div>
            <div class="col-md-4 mb-4">
                <label><b>CNPJ:</b></label>
                <input type="text" class="form-control cnpj" @*value="@(!String.IsNullOrWhiteSpace(Model.CLI_CNPJ) ? Model.CLI_CNPJ : "")"*@ name="CLI_CNPJ" id="CLI_CNPJ" placeholder="##.###.###/####-##" onkeyup="mascara('##.###.###/####-##',this,event,true)" maxlength="18">
                <br class="dont-print">
            </div>
            <div class="col-md-4 mb-4">
                <label><b>RG:</b></label>
                <input type="text" class="form-control" @*value="@(!String.IsNullOrWhiteSpace(Model.CLI_RG) ? Model.CLI_RG : "")"*@ name="CLI_RG" id="CLI_RG" placeholder="##.###.###-#" onkeyup="mascara('##.###.###-#',this,event,true)" maxlength="12">
                <br class="dont-print">
            </div>
            <div class="col-md-4 mb-4">
                <label><b>Telefone:</b></label>
                <input type="text" class="form-control" @*value="@(!String.IsNullOrWhiteSpace(Model.CLI_TELEFONE) ? Model.CLI_TELEFONE : "")"*@ name="CLI_TELEFONE" id="CLI_TELEFONE" placeholder="(##)####.####" onkeyup="mascara('(##)####.####',this,event,true)" maxlength="13">
                <br class="dont-print">
            </div>
            <div class="col-md-4 mb-4">
                <label><b>Celular:</b></label>
                <input type="text" class="form-control" @*value="@(!String.IsNullOrWhiteSpace(Model.CLI_CELULAR) ? Model.CLI_CELULAR : "")"*@ name="CLI_CELULAR" id="CLI_CELULAR" placeholder="(##)#####.####" onkeyup="mascara('(##)#####.####',this,event,true)" maxlength="14">
                <br class="dont-print">
            </div>
            <div class="col-md-4 mb-4">
                <label><b>Email:</b></label>
                <input type="text" class="form-control" @*value="@(!String.IsNullOrWhiteSpace(Model.CLI_EMAIL) ? Model.CLI_EMAIL : "")"*@ name="CLI_EMAIL" id="CLI_EMAIL">
                <br class="dont-print">
            </div>
            <div class="col-md-4 mb-4">
                <label><b>CEP:</b></label>
                <input type="text" class="form-control" @*value="@(!String.IsNullOrWhiteSpace(Model.CLI_CEP) ? Model.CLI_CEP : "")"*@ name="CLI_CEP" id="cep" placeholder="##.###-###" onkeyup="mascara('##.###-###',this,event,true)" maxlength="10">
                <br class="dont-print">
            </div>
            <div class="col-md-4 mb-4">
                <label><b>Logradouro:</b></label>
                <input type="text" class="form-control" @*value="@(!String.IsNullOrWhiteSpace(Model.CLI_LOGRADOURO) ? Model.CLI_LOGRADOURO : "")"*@ name="CLI_LOGRADOURO" id="logradouro">
                <br class="dont-print">
            </div>
            <div class="col-md-4 mb-4">
                <label><b>Complemento:</b></label>
                <input type="text" class="form-control" @*value="@(!String.IsNullOrWhiteSpace(Model.CLI_COMPLEMENTO) ? Model.CLI_COMPLEMENTO : "")"*@ name="CLI_COMPLEMENTO" id="complemento">
                <br class="dont-print">
            </div>
            <div class="col-md-4 mb-4">
                <label><b>Bairro:</b></label>
                <input type="text" class="form-control" @*value="@(!String.IsNullOrWhiteSpace(Model.CLI_BAIRRO) ? Model.CLI_BAIRRO : "")"*@ name="CLI_BAIRRO" id="bairro">
                <br class="dont-print">
            </div>
            <div class="col-md-4 mb-4">
                <label><b>Município:</b></label>
                <input type="text" class="form-control" @*value="@(!String.IsNullOrWhiteSpace(Model.CLI_MUNICIPIO) ? Model.CLI_MUNICIPIO : "")"*@ name="CLI_MUNICIPIO" id="localidade">
                <br class="dont-print">
            </div>
            <div class="col-md-2 mb-2">
                <label><b>UF:</b></label>
                <input type="text" class="form-control" @*value="@(!String.IsNullOrWhiteSpace(Model.CLI_UF) ? Model.CLI_UF : "")"*@ name="CLI_UF" id="uf">
                <br class="dont-print">
            </div>
            <div class="col-md-2 mb-2">
                <label><b>Número:</b></label>
                <input type="text" class="form-control" @*value="@(!String.IsNullOrWhiteSpace(Model.CLI_NUMERO) ? Model.CLI_NUMERO : "")"*@ name="CLI_NUMERO" id="numero">
                <br class="dont-print">
            </div>
        </form>
        <br class="dont-print">
        <button class="btn-cadastrar">Atualizar <i class="fa fa-pen"></i></button>
    </div>
</div>